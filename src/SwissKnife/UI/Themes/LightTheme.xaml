<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme Color Palette -->
    <Color x:Key="AccentColor">#7B68EE</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentBrushHover" Color="#6A5ACD" />
    <SolidColorBrush x:Key="AccentBrushPressed" Color="#8B7FEF" />
    <SolidColorBrush x:Key="BgPrimaryBrush" Color="#F5F5F5" />
    <SolidColorBrush x:Key="BgSecondaryBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="BorderBrushLight" Color="#E0E0E0" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575" />
    
    <!-- Light Theme Specific -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FAFAFA" />
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#F0F0F0" />
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#FEFEFE" />
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="#F5F5F5" />
    <SolidColorBrush x:Key="SidebarPressedBrush" Color="#E8E8E8" />
    
    <!-- Additional UI Colors -->
    <SolidColorBrush x:Key="ResultBackgroundBrush" Color="#F8F8F8" />
    <SolidColorBrush x:Key="ListBoxBackgroundBrush" Color="#FEFEFE" />
    
    <!-- Badge Colors -->
    <SolidColorBrush x:Key="SuccessBadgeBrush" Color="#4CAF50" />
    <SolidColorBrush x:Key="WarningBadgeBrush" Color="#FF6B35" />
    
    <!-- Shadow -->
    <Color x:Key="ShadowColor">#CCCCCC</Color>
    
</ResourceDictionary>
