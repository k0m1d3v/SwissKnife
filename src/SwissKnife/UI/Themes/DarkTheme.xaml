<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Color Palette -->
    <Color x:Key="AccentColor">#8A7CFF</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentBrushHover" Color="#A89DFF" />
    <SolidColorBrush x:Key="AccentBrushPressed" Color="#6B5CE5" />
    <SolidColorBrush x:Key="BgPrimaryBrush" Color="#151515" />
    <SolidColorBrush x:Key="BgSecondaryBrush" Color="#1E1E1E" />
    <SolidColorBrush x:Key="BorderBrushLight" Color="#2A2A2A" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F5F5F5" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B3B3B3" />
    
    <!-- Dark Theme Specific -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#121212" />
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#141414" />
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#101010" />
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#202020" />
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="#1F1F1F" />
    <SolidColorBrush x:Key="SidebarPressedBrush" Color="#232323" />
    
    <!-- Additional UI Colors -->
    <SolidColorBrush x:Key="ResultBackgroundBrush" Color="#191919" />
    <SolidColorBrush x:Key="ListBoxBackgroundBrush" Color="#202020" />
    
    <!-- Badge Colors -->
    <SolidColorBrush x:Key="SuccessBadgeBrush" Color="#4CAF50" />
    <SolidColorBrush x:Key="WarningBadgeBrush" Color="#FF6B35" />
    
    <!-- Shadow -->
    <Color x:Key="ShadowColor">#000000</Color>
    
</ResourceDictionary>
