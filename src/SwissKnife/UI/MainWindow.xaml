<Window x:Class="SwissKnife.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SwissKnife - Multi Tool" Height="420" Width="700" MinHeight="380" MinWidth="640">

    <Grid Margin="12" RowDefinitions="Auto,Auto,Auto,Auto,Auto,*,Auto" ColumnDefinitions="*">
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0 0 0 8">
            <TextBlock Text="SwissKnife" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Toolbox modulare - MVP Hash SHA-256" Foreground="Gray" FontSize="12"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center" Margin="0 0 0 8">
            <TextBox x:Name="FilePathTextBox" MinWidth="400" Margin="0 0 8 0" VerticalContentAlignment="Center"/>
            <Button x:Name="BrowseButton" Content="Sfoglia" Width="80" Click="BrowseButton_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0 0 0 8">
            <Button x:Name="CalculateButton" Content="Calcola SHA-256" Width="140" Click="CalculateButton_Click"/>
            <Button x:Name="CancelButton" Content="Annulla" Width="80" Margin="8 0 0 0" Click="CancelButton_Click" IsEnabled="False"/>
        </StackPanel>

        <ProgressBar x:Name="OperationProgressBar"
                     Grid.Row="3"
                     Height="18"
                     IsIndeterminate="False"
                     Minimum="0"
                     Maximum="100"
                     Visibility="Collapsed"/>

        <GroupBox Header="Risultato" Grid.Row="4" Margin="0 8 0 8">
            <Grid Margin="6" ColumnDefinitions="* Auto" VerticalAlignment="Center">
                <TextBox x:Name="HashOutputTextBox" IsReadOnly="True" VerticalContentAlignment="Center" Margin="0 0 8 0"/>
                <Button x:Name="CopyButton" Content="Copia" Width="80" Grid.Column="1" Click="CopyButton_Click" IsEnabled="False"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Log" Grid.Row="5">
            <TextBox x:Name="LogTextBox" Margin="6" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True" TextWrapping="Wrap"/>
        </GroupBox>

        <StatusBar Grid.Row="6" Margin="0 8 0 0">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Pronto"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
