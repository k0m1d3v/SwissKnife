<Window x:Class="SwissKnife.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SwissKnife.UI.ViewModels"
        xmlns:models="clr-namespace:SwissKnife.UI.Models"
        mc:Ignorable="d"
        Title="SwissKnife - Multi Tool"
        Height="600"
        Width="1000"
        MinHeight="520"
        MinWidth="880"
        Background="{DynamicResource WindowBackgroundBrush}"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Background="{DynamicResource BgPrimaryBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Sidebar -->
        <Border Grid.Row="0" Grid.Column="0"
                Background="{DynamicResource SidebarBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrushLight}"
                BorderThickness="0 0 1 0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="14 16" Orientation="Vertical">
                    <TextBlock Text="SwissKnife" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="Multi-tool dashboard" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <ItemsControl ItemsSource="{Binding Categories}" Margin="6 10" DockPanel.Dock="Top">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:CategoryItem}">
                            <Button Style="{StaticResource SidebarItemStyle}"
                                    Command="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding Key}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </Border>

        <!-- Main -->
        <Grid Grid.Row="0" Grid.Column="1" Margin="16 16 16 8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical" Margin="0 0 0 14">
                <TextBlock Text="{Binding SelectedCategoryDisplayName}" FontSize="22" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                <TextBlock Text="{Binding SelectedCategorySubtitle}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
            </StackPanel>

            <ContentControl Grid.Row="1"
                            Content="{Binding SelectedCategory}"
                            ContentTemplateSelector="{StaticResource CategoryTemplateSelector}"
                            Style="{StaticResource FadeInContentControl}"/>
        </Grid>

        <!-- Status -->
        <Border Grid.Row="1" Grid.ColumnSpan="2"
                Background="{DynamicResource StatusBarBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrushLight}"
                BorderThickness="1 1 0 0"
                Padding="10 6">
            <TextBlock Text="{Binding StatusText}" Foreground="{DynamicResource TextSecondaryBrush}" />
        </Border>
    </Grid>
</Window>
